/* --- 全局背景与布局 --- */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* --- DeepSeek AI 金句 Banner --- */
.gold-banner {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 顶部标题与点赞按钮对齐 */
.gold-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.gold-title {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

/* 点赞按钮移至顶部并优化样式 */
.gold-like-btn {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.gold-like-btn.active {
  background: #fff1f0;
  border: 1rpx solid #ffccc7;
}

.gold-like-btn .icon {
  font-size: 26rpx;
}

.gold-like-btn .count {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
  font-weight: 600;
}

.gold-like-btn.active .count {
  color: #cf1322;
}

/* 金句内容卡片：恢复均匀内边距 */
.gold-content {
  background: #f9f9f9;
  padding: 45rpx 35rpx;
  border-radius: 16rpx;
  display: flex;
  position: relative;
}

.gold-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  line-height: 1.7;
  font-weight: 500;
  text-align: justify;
}

/* 对称引号 */
.quote-mark {
  font-size: 50rpx;
  color: #ddd;
  font-family: serif;
  height: 40rpx;
  line-height: 40rpx;
}

.quote-mark.start {
  margin-right: 12rpx;
  margin-top: -10rpx;
}

.quote-mark.end {
  margin-left: 12rpx;
  align-self: flex-end;
  margin-bottom: -10rpx;
}

/* --- 登录设置样式 --- */
.login-wrapper {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 90%;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-tips {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.avatar-wrapper {
  padding: 0 !important;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 90rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.edit-text {
  font-size: 24rpx;
  color: #07c160;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.nickname-item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #eeeeee;
  margin-bottom: 60rpx;
}

.nickname-item .label {
  width: 120rpx;
  color: #333;
  font-weight: bold;
}

.nickname-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
}

/* --- 打卡表单样式 --- */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #07c160;
  text-align: center;
}

.item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input-field {
  height: 80rpx;
  border-bottom: 2rpx solid #eeeeee;
  font-size: 32rpx;
}

.textarea-field {
  width: 100%;
  height: 160rpx;
  background: #f9f9f9;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.upload-area {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.plus-icon {
  font-size: 60rpx;
  color: #999;
}

.submit-btn, .login-btn {
  margin-top: 30rpx;
  width: 100% !important;
  border-radius: 40rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background-color: #07c160 !important;
  color: #ffffff;
}