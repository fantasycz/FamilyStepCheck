.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background-color: #f7f8fa; /* 增加背景色，让卡片更显眼 */
}

/* --- 新版登录设置样式 --- */
.login-wrapper {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 90%;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-tips {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

/* 头像点击区域 */
.avatar-wrapper {
  padding: 0 !important;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 90rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.edit-text {
  font-size: 24rpx;
  color: #07c160;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 昵称输入行 */
.nickname-item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #eeeeee;
  margin-bottom: 60rpx;
}

.nickname-item .label {
  width: 120rpx;
  margin-bottom: 0; /* 覆盖全局 label 的 margin */
  color: #333;
  font-weight: bold;
}

.nickname-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
}

/* --- 原有打卡表单样式 --- */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #07c160;
  text-align: center;
}

.item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input-field {
  height: 80rpx;
  border-bottom: 2rpx solid #eeeeee;
  font-size: 32rpx;
}

.textarea-field {
  width: 100%;
  height: 160rpx;
  background: #f9f9f9;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.upload-area {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.plus-icon {
  font-size: 60rpx;
  color: #999;
}

.submit-btn, .login-btn {
  margin-top: 30rpx;
  width: 100% !important;
  border-radius: 40rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background-color: #07c160 !important;
}