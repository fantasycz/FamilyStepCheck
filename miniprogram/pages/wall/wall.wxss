.wall-container { padding: 20rpx; background: #f4f4f4; min-height: 100vh; }
.post-card { background: #fff; border-radius: 15rpx; padding: 25rpx; margin-bottom: 25rpx; }

.user-info { display: flex; align-items: center; margin-bottom: 20rpx; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; background: #eee; }
.text-info { margin-left: 20rpx; display: flex; flex-direction: column; }
.nickname { font-size: 30rpx; font-weight: bold; color: #333; }
.time { font-size: 24rpx; color: #999; margin-top: 5rpx; }

.content { padding-left: 0rpx; }
.step-tag { background: #e8f5e9; color: #2e7d32; padding: 5rpx 20rpx; border-radius: 30rpx; font-size: 26rpx; display: inline-block; margin-bottom: 15rpx; }
.bold { font-weight: bold; }
.mood-text { display: block; font-size: 30rpx; color: #444; line-height: 1.6; margin-bottom: 20rpx; }
.post-image { width: 100%; border-radius: 10rpx; }

.no-data { text-align: center; color: #999; margin-top: 100rpx; }

.load-status {
  padding: 40rpx 0 80rpx; /* 底部留白，防止被 TabBar 遮挡 */
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-spin {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #07c160;
  border-top-color: transparent;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: spin 0.8s linear infinite;
}

.no-more {
  color: #ccc;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 互动栏容器 */
.interact-bar {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end; 
}

/* 点赞按钮基础样式 */
.like-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 24rpx;
  background: #f8f8f8;
  border-radius: 40rpx;
  transition: all 0.2s ease;
  /* 增加点击时的半透明效果 */
}

.like-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

/* 心形图标 */
.heart-icon {
  font-size: 34rpx;
  margin-right: 8rpx;
  transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  display: inline-block;
}

/* 点赞后的数字颜色 */
.like-count {
  font-size: 26rpx;
  color: #666;
  font-variant-numeric: tabular-nums; /* 防止数字变化时布局抖动 */
}

.like-count.active {
  color: #ff4d4f;
  font-weight: bold;
}

/* --- 核心动画效果 --- */

/* 点赞后的心跳缩放动画 */
.pulse {
  animation: heartBeat 0.4s ease-out;
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  40% { transform: scale(1.4); }
  70% { transform: scale(0.9); }
  100% { transform: scale(1.2); } /* 停留在一个稍微放大一点的状态 */
}

/* 装饰性：如果点赞了，让按钮背景也带一点淡淡的红色提示 */
.like-btn .liked-bg {
  background: #fff1f0;
}