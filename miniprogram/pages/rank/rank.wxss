page { background-color: #f8f8f8; }

/* 顶部绿色背景 */
.nav-bg {
  position: fixed;
  top: 0;
  width: 100%;
  height: 140rpx;
  background-color: #58be6a;
  z-index: -1;
}

/* Tab 切换 */
.tab-wrapper {
  padding: 20rpx 40rpx;
}
.tab-box {
  display: flex;
  background: #fff;
  border: 2rpx solid #58be6a;
  border-radius: 50rpx;
  overflow: hidden;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #58be6a;
}
.tab-item.active {
  background: #58be6a;
  color: #fff;
}

/* 列表容器 */
.list-wrapper {
  padding: 10rpx 30rpx;
}

/* 通用卡片样式 */
.rank-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.05);
}

/* --- 前三名数字通用样式 --- */
.rank-index {
  font-size: 50rpx; /* 前三名数字大一点 */
  font-weight: bold;
  font-style: italic;
  width: 70rpx;
  margin-right: 20rpx;
  text-align: center;
}

/* 金色 (第一名) */
.gold-num {
  background: linear-gradient(to bottom, #f1c40f, #d4af37);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 80rpx; /* 第一名最突出 */
}

/* 银色 (第二名) */
.silver-num {
  background: linear-gradient(to bottom, #bdc3c7, #95a5a6);
  -webkit-background-clip: text;
  color: transparent;
}

/* 铜色 (第三名) */
.bronze-num {
  background: linear-gradient(to bottom, #e67e22, #a0522d);
  -webkit-background-clip: text;
  color: transparent;
}

/* 普通排名数字样式 */
.common-num {
  font-size: 32rpx;
  color: #999;
  width: 70rpx;
  margin-right: 20rpx;
  text-align: center;
  font-style: italic;
}

/* 头像外圈 - 默认 */
.avatar-box {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  padding: 3rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 前三名头像边框颜色同步 */
.border-gold { border-color: #f1c40f; }
.border-silver { border-color: #bdc3c7; }
.border-bronze { border-color: #e67e22; }

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #eee;
}

.user-main {
  flex: 1;
  overflow: hidden;
}
.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 步数显示 */
.steps-display {
  text-align: right;
  min-width: 140rpx;
}
.step-value {
  font-size: 38rpx;
  font-weight: bold;
  color: #58be6a;
}
/* 前三名步数颜色也跟着变，更有荣誉感 */
.gold-text { color: #d4af37; }
.silver-text { color: #7f8c8d; }
.bronze-text { color: #a0522d; }

.step-label {
  font-size: 20rpx;
  color: #999;
  margin-left: 4rpx;
}