page { background-color: #f8f8f8; }

/* 顶部绿色背景 - 改为 absolute 配合容器，防止遮挡 */
.nav-bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 240rpx; /* 高度稍微增加，渐变更自然 */
  background: linear-gradient(180deg, #58be6a 0%, #f8f8f8 100%);
  z-index: 0;
}

/* Tab 切换 */
.tab-wrapper {
  position: relative;
  z-index: 10;
  padding: 30rpx 40rpx 20rpx;
}
.tab-box {
  display: flex;
  background: rgba(88, 190, 106, 0.8); /* 稍微透明，更有高级感 */
  border: 2rpx solid #58be6a;
  border-radius: 50rpx;
  overflow: hidden;
  backdrop-filter: blur(5px);
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #ffffff;
  transition: all 0.2s;
}
.tab-item.active {
  background: #ffffff;
  color: #58be6a;
  font-weight: bold;
}

/* 列表容器 */
.list-wrapper {
  position: relative;
  z-index: 10;
  padding: 10rpx 30rpx 40rpx;
}

/* 通用卡片样式 */
.rank-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.03);
  transition: transform 0.2s;
}

/* 第一名微调：不要过大，避免挤压用户信息 */
.first-place {
  transform: scale(1.02);
  box-shadow: 0 6rpx 20rpx rgba(241, 196, 15, 0.15);
}

/* --- 名次数字样式 --- */
.rank-index {
  font-weight: bold;
  font-style: italic;
  width: 80rpx;
  margin-right: 15rpx;
  text-align: center;
  flex-shrink: 0;
}

.gold-num {
  background: linear-gradient(to bottom, #f1c40f, #d4af37);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 70rpx; /* 稍微缩小一点，更协调 */
}

.silver-num {
  background: linear-gradient(to bottom, #bdc3c7, #7f8c8d);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 50rpx;
}

.bronze-num {
  background: linear-gradient(to bottom, #e67e22, #a0522d);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 50rpx;
}

.common-num {
  font-size: 32rpx;
  color: #bbb;
  font-style: normal; /* 普通数字不需要倾斜，对比更明显 */
}

/* 头像框 */
.avatar-box {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  padding: 3rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.border-gold { border-color: #f1c40f; box-shadow: 0 0 10rpx rgba(241, 196, 15, 0.3); }
.border-silver { border-color: #bdc3c7; }
.border-bronze { border-color: #e67e22; }

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #eee;
}

.user-main {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 步数显示 */
.steps-display {
  text-align: right;
  min-width: 150rpx;
}
.step-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #58be6a;
}
.gold-text { color: #d4af37; }
.silver-text { color: #7f8c8d; }
.bronze-text { color: #a0522d; }

.step-label {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* --- 新增：分页加载状态样式 --- */
.load-status {
  padding: 30rpx 0 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
}

.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}

.loading-spin {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #58be6a;
  border-top-color: transparent;
  border-radius: 50%;
  margin-right: 15rpx;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 空状态微调 */
.rank-empty {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}
.empty-text {
  margin-top: 20rpx;
  font-size: 26rpx;
}